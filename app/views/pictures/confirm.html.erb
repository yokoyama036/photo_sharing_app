<h3>以下の内容で、投稿する。</h3>

<%= form_with(model: @picture, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <%= image_tag(@picture.image.url) if @picture.image.present? %>
  <%= form.hidden_field :image_cache,size: '100x100' %>

  <p>本文:<%= @picture.content %></p>
  <%= form.submit  "登録する" %>
<% end %>
<%= form_with(model:@picture, url:new_picture_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
